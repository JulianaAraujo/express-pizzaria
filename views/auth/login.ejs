<!DOCTYPE html>
<html lang="en">
    <%- include('../includes/head', {titulo:"Cadastro de Usuario"}) %> 
    <body>
        <%- include('../includes/header') %> 

        <main class="container">
            <div class="row">
                <div class="col-12">
                    <h1>Login</h1>
                </div>
                <div class="col-12">
                    <form class="w-50" action="/usuarios/login" method="POST">
                        <div class="form-group">
                            <label for="emailUsuario">Seu email</label>
                            <input class="form-control" name="emailUsuario" id="emailUsuario" type="email">
                        </div>
                        <div class="form-group">
                            <label for="senhaUsuario">Senha</label>
                            <input class="form-control" type="password" name="senhaUsuario" id="senhaUsuario">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Logar</button>
                        </div>
                    </form>
                </div>
                <% if(typeof(msg) != 'undefined' && msg != null){ %>
                <div class="col-12">
                    <div class="alert alert-danger" role="alert">
                      <%= msg %>
                    </div>
                </div>
                <% } %>
            </div>
        </main>

    </body>
</html>